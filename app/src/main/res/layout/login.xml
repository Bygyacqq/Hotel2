<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_tertiary70"
    android:contentDescription="@string/app_name"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="501dp"
            android:layout_height="252dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="-90dp"
            tools:srcCompat="@mipmap/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="269dp"
            android:layout_height="183dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-71dp"
            tools:layout_editor_absoluteY="1129dp"
            tools:srcCompat="@mipmap/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="193dp"
            android:layout_height="183dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-34dp"
            tools:layout_editor_absoluteY="38dp"
            tools:srcCompat="@mipmap/ic_launcher_left" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="165dp"
            android:layout_height="157dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="484dp"
            tools:layout_editor_absoluteY="1024dp"
            tools:srcCompat="@mipmap/ic_launcher_left" />

        <TextView
            android:id="@+id/msj_bienvenida"
            android:layout_width="551dp"
            android:layout_height="108dp"
            android:layout_marginStart="28dp"
            android:text="Bienvenido a su app"
            android:textSize="60dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.273"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/email"
            android:layout_width="538dp"
            android:layout_height="62dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:text="Email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.408"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/correo"
            android:layout_width="56dp"
            android:layout_height="72dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="521dp"
            tools:srcCompat="@mipmap/ic_correo_" />

        <EditText
            android:id="@+id/clave"
            android:layout_width="540dp"
            android:layout_height="63dp"
            android:minHeight="48dp"
            android:text="Contraseña"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.493" />

        <ImageView
            android:id="@+id/claveimg"
            android:layout_width="56dp"
            android:layout_height="66dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="616dp"
            tools:srcCompat="@mipmap/ic_clave_" />

        <ImageView
            android:id="@+id/log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@tools:sample/avatars"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.597"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@mipmap/ic_ingreso_" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_entry"
            tools:ignore="UnknownId">


        </LinearLayout>

        <Button
            android:id="@+id/crear"
            android:layout_width="610dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Create an account"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:ignore="MissingConstraints,TextSizeCheck"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="897dp" />

        <TextView
            android:id="@+id/registro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="¿Aún no tienes una cuenta?, ¡registrate con nosotros!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="860dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>