<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_tertiary70"
    android:contentDescription="@string/app_name"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="501dp"
            android:layout_height="252dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="254dp"
            tools:layout_editor_absoluteY="-52dp"
            tools:srcCompat="@mipmap/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="269dp"
            android:layout_height="183dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-24dp"
            tools:layout_editor_absoluteY="819dp"
            tools:srcCompat="@mipmap/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="193dp"
            android:layout_height="183dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-34dp"
            tools:layout_editor_absoluteY="38dp"
            tools:srcCompat="@mipmap/ic_launcher_left" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="165dp"
            android:layout_height="157dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="484dp"
            tools:layout_editor_absoluteY="782dp"
            tools:srcCompat="@mipmap/ic_launcher_left" />

        <TextView
            android:id="@+id/msj_bienvenida"
            android:layout_width="551dp"
            android:layout_height="108dp"
            android:layout_marginStart="28dp"
            android:text="Bienvenido a su app"
            android:textSize="60dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.273"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/email"
            android:layout_width="538dp"
            android:layout_height="62dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:text="Email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.408"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/correo"
            android:layout_width="56dp"
            android:layout_height="72dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="389dp"
            tools:srcCompat="@mipmap/ic_correo_" />

        <EditText
            android:id="@+id/clave"
            android:layout_width="540dp"
            android:layout_height="63dp"
            android:minHeight="48dp"
            android:text="ContraseÃ±a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.493" />

        <ImageView
            android:id="@+id/claveimg"
            android:layout_width="56dp"
            android:layout_height="66dp"
            android:src="@tools:sample/avatars"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="461dp"
            tools:srcCompat="@mipmap/ic_clave_" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>